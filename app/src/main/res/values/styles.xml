<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/header</item>
    </style>

    <style name="Header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">430dp</item>
        <item name="android:background">@drawable/container_components</item>
    </style>

    <style name="CompraComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@drawable/compra_components</item>
    </style>

    <style name="ClienteComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@drawable/compra_components</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Button_main">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:elevation">15dp</item>
    </style>

    <style name="Button_aux">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button2</item>
        <item name="android:elevation">15dp</item>
    </style>



</resources>